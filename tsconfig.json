{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext", // 적절한 모듈 시스템 선택
    "moduleResolution": "node", // 'node'로 설정 변경
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx", // Next.js에 적합한 JSX 설정으로 변경
    "jsxImportSource": "@emotion/react",
    "incremental": true,
    "types": ["cypress", "jest", "@testing-library/jest-dom"],
    "paths": {
      "~/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "cypress/cypress.config.js",
    "./jest.setup.js"
  ],
  "exclude": ["node_modules"]
}
